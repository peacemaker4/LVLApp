<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.madrapps.pikolo.HSLColorPicker
        android:id="@+id/colorPicker"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        app:arc_length="110"
        app:hue_start_angle="30"
        app:layout_constraintBottom_toTopOf="@+id/edit_action_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lightness_indicator_stroke_width="0dp"
        app:lightness_start_angle="270"
        app:radius_offset="20dp"
        app:saturation_indicator_stroke_color="@color/red"
        app:saturation_start_angle="150"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/imageBg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_circle_outline"
        app:layout_constraintBottom_toTopOf="@+id/edit_action_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorPicker" />



    <ImageView
        android:id="@+id/imageBgDark"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/dark_bg"
        app:layout_constraintBottom_toTopOf="@+id/edit_action_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorPicker" />

    <ImageView
        android:id="@+id/imageSkill"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/ic_icon_etc"
        app:layout_constraintBottom_toTopOf="@+id/edit_action_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorPicker" />

    <EditText
        android:id="@+id/edit_action_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_pill_transparent_bg_red_stroke"
        android:hint="Enter name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Action"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/edit_action_name"
        app:layout_constraintEnd_toEndOf="@+id/edit_action_name"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="@+id/edit_action_name"
        app:layout_constraintTop_toTopOf="@+id/edit_action_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_action_desc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_pill_transparent_bg_red_stroke"
        android:hint="Enter what it's about"
        android:inputType="text"
        android:maxLines="2"
        android:paddingLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Description"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/edit_action_desc"
        app:layout_constraintEnd_toEndOf="@+id/edit_action_desc"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="@+id/edit_action_desc"
        app:layout_constraintTop_toTopOf="@+id/edit_action_desc"
        app:layout_constraintVertical_bias="0.0" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/bubbleSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:bsb_auto_adjust_section_mark="true"
        app:bsb_bubble_color="@color/red"
        app:bsb_bubble_text_color="@color/white"
        app:bsb_is_float_type="false"
        app:bsb_max="10"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/red"
        app:bsb_section_count="10"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_track_color="#C12E2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_action_desc"
        app:layout_constraintVertical_bias="0.14"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="XP given"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="@+id/bubbleSeekBar"
        app:layout_constraintStart_toStartOf="@+id/bubbleSeekBar"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/rounded_pill"
        android:drawableRight="@drawable/ic_icon_check"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_action_desc"
        app:layout_constraintVertical_bias="0.80000012" />


</androidx.constraintlayout.widget.ConstraintLayout>