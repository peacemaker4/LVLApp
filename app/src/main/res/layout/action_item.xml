<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/skill_layout_border"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@color/white"
    android:paddingBottom="0.5dp"
    android:paddingRight="0.5dp"
    >
    <LinearLayout
        android:id="@+id/skill_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        android:foreground="@drawable/custom_ripple"
        android:backgroundTint="@color/dark"
        >
        <ImageView
            android:id="@+id/icon_id"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_icon_rocket"
            android:layout_gravity="start"
            />

        <TextView
            android:id="@+id/name_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="start"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Action"
            android:textAlignment="textStart"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/desc_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_light"
            android:layout_gravity="start"
            android:textColor="#D5D5D5"
            android:text="Something"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/xp_id"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#8C8C8C"
                android:text="+ 1 XP"
                android:textSize="11sp" />
            <ImageButton
                android:id="@+id/add_btn_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_icon_plus_circle"
                android:background="@color/transparent"
                android:foreground="@drawable/custom_ripple_circle"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>

